<div>
  <h1>Query Interface</h1>
  <br/>

  <a href="<%= root_path %>">Home</a>

  <br/>
  <br/>

  <% if @user.present? %>
    <p>User Id : <%= @user.id %></p>
    <p>User Name : <%= @user.name %></p>
  <% end %>

	<% if @user_id.present? %>
    <p>User Id : <%= @user_id %></p>
  <% end %>

  <% if @users.present? %>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

  <% if @user_order.present? %>
		<h3>User by Ordering name</h3>
    <p>User Id : <%= @user_order.id %></p>
    <p>User Name : <%= @user_order.name %></p>
  <% end %>

	<% if @all_users.present? %>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
        </tr>
      </thead>

      <tbody>
        <% @all_users.find_each(batch_size: 5) do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

	<h3> find_in_batches method </h3>
	<% User.find_in_batches(batch_size: 100) do |users| %>
		<% users.each do |user| %>
			<p><%= user.name %></p>
		<% end %>
	<% end %>

	<% if @posts.present? %>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>User</th>
          <th>Title</th>
          <th>Content</th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.id %></td>
            <td><%= post.user.name %></td>
            <td><%= post.title %></td>
            <td><%= post.content %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>

	<% if @vehicles.present? %>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Type</th>
          <th>Model</th>
          <th>Make</th>
          <th>Year</th>
        </tr>
      </thead>

      <tbody>
        <% @vehicles.each do |vehicle| %>
          <tr>
            <td><%= vehicle.id %></td>
            <td><%= vehicle.type %></td>
            <td><%= vehicle.model %></td>
            <td><%= vehicle.make %></td>
            <td><%= vehicle.year %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>