<div>
  <h1>Listing Posts</h1>
  <br/>

  <a href="<%= root_path %>">Home</a>

  <br/>
  <br/>

  <% if @posts.present? %>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Title</th>
          <th>Content</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @posts.each do |post| %>
          <tr>
            <td><%= post.id %></td>
            <td><%= post.title %></td>
            <td><%= post.content %></td>
            <td>
              <a href="<%= post_path(post) %>">Details</a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>