<div>
  <h1>Listing Users</h1>
  <br/>

  <a href="<%= root_path %>">Home</a>

  <br/>
  <br/>

  <% if @users.present? %>
    <table class="table">
      <thead>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th></th>
        </tr>
      </thead>

      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.name %></td>
            <td>
              <a href="<%= user_path(user) %>">Details</a>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  <% end %>
</div>